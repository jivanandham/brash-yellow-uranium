<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Market | Trading Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/markets.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/user-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Market Overview Section -->
            <div class="col-12 market-header">
                <h1><i class="fas fa-dollar-sign"></i> Currency Market</h1>
                <div class="market-stats">
                    <div class="stat-item">
                        <span class="stat-label">EUR/USD</span>
                        <span class="stat-value">1.0925</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Daily Volume</span>
                        <span class="stat-value">$6.2T</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Active Pairs</span>
                        <span class="stat-value">180+</span>
                    </div>
                </div>
            </div>

            <!-- Market Content -->
            <div class="col-12">
                <div class="card market-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Major Currency Pairs</h5>
                            <div class="market-filters">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                                <button class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="fas fa-sort"></i> Sort
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Pair</th>
                                        <th>Last Price</th>
                                        <th>24h Change</th>
                                        <th>24h High</th>
                                        <th>24h Low</th>
                                        <th>Volume</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>EUR/USD</td>
                                        <td>1.0925</td>
                                        <td class="text-success">+0.15%</td>
                                        <td>1.0945</td>
                                        <td>1.0890</td>
                                        <td>$985M</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Trade</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>GBP/USD</td>
                                        <td>1.2635</td>
                                        <td class="text-danger">-0.08%</td>
                                        <td>1.2680</td>
                                        <td>1.2610</td>
                                        <td>$725M</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Trade</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="/js/user-navbar.js"></script>
    <script src="/js/markets.js"></script>
</body>
</html>
