<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Commodity Market | Trading Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/markets.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/user-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Market Overview Section -->
            <div class="col-12 market-header">
                <h1><i class="fas fa-oil-can"></i> Commodity Market</h1>
                <div class="market-stats">
                    <div class="stat-item">
                        <span class="stat-label">Crude Oil</span>
                        <span class="stat-value">$75.45/bbl</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Daily Volume</span>
                        <span class="stat-value">2.8M contracts</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Active Markets</span>
                        <span class="stat-value">50+</span>
                    </div>
                </div>
            </div>

            <!-- Market Content -->
            <div class="col-12">
                <div class="card market-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Major Commodities</h5>
                            <div class="market-filters">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                                <button class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="fas fa-sort"></i> Sort
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Commodity</th>
                                        <th>Price</th>
                                        <th>24h Change</th>
                                        <th>Volume</th>
                                        <th>Category</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>CL</td>
                                        <td>Crude Oil</td>
                                        <td>$75.45/bbl</td>
                                        <td class="text-success">+1.25%</td>
                                        <td>850K</td>
                                        <td>Energy</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Trade</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>NG</td>
                                        <td>Natural Gas</td>
                                        <td>$2.85/MMBtu</td>
                                        <td class="text-danger">-0.65%</td>
                                        <td>425K</td>
                                        <td>Energy</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Trade</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>SI</td>
                                        <td>Silver</td>
                                        <td>$24.15/oz</td>
                                        <td class="text-success">+0.85%</td>
                                        <td>155K</td>
                                        <td>Metals</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Trade</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="/js/user-navbar.js"></script>
    <script src="/js/markets.js"></script>
</body>
</html>
