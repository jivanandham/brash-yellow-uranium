<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mutual Funds | Trading Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/markets.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/user-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Market Overview Section -->
            <div class="col-12 market-header">
                <h1><i class="fas fa-funnel-dollar"></i> Mutual Funds</h1>
                <div class="market-stats">
                    <div class="stat-item">
                        <span class="stat-label">Total AUM</span>
                        <span class="stat-value">$21.8T</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Daily NAV Change</span>
                        <span class="stat-value">+1.2%</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-label">Active Funds</span>
                        <span class="stat-value">8,245</span>
                    </div>
                </div>
            </div>

            <!-- Market Content -->
            <div class="col-12">
                <div class="card market-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Top Performing Funds</h5>
                            <div class="market-filters">
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                                <button class="btn btn-outline-primary btn-sm ms-2">
                                    <i class="fas fa-sort"></i> Sort
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Symbol</th>
                                        <th>Fund Name</th>
                                        <th>NAV</th>
                                        <th>1Y Return</th>
                                        <th>AUM</th>
                                        <th>Risk Level</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>FCNTX</td>
                                        <td>Fidelity Contrafund</td>
                                        <td>$15.85</td>
                                        <td class="text-success">+18.5%</td>
                                        <td>$125.4B</td>
                                        <td>Moderate</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Invest</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>VFIAX</td>
                                        <td>Vanguard 500 Index Fund</td>
                                        <td>$385.45</td>
                                        <td class="text-success">+15.2%</td>
                                        <td>$245.8B</td>
                                        <td>Moderate</td>
                                        <td>
                                            <button class="btn btn-primary btn-sm">Invest</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="/js/user-navbar.js"></script>
    <script src="/js/markets.js"></script>
</body>
</html>
