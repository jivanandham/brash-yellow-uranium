<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>White Navbar</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom Navbar Styles */
    .navbar {
      background-color: #f8f9fa; /* Light gray background */
      padding: 0.75rem 20rem; /* Padding on top-bottom and both sides */
    }
    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      color: #343a40;
    }

    .navbar-brand:hover {
      color: #0056b3;
    }

    .nav-link {
      font-size: 1.1rem;
      font-weight: 500;
    }

    .nav-link:hover {
      color: #0056b3;
    }

    .dropdown-menu {
      border-radius: 8px;
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item:hover {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="adminNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <i class="fas fa-chart-line me-1"></i>Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/users">
              <i class="fas fa-users me-1"></i>Users
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/user-transactions">
              <i class="fas fa-exchange-alt me-1"></i>Transactions
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/error-logs">
              <i class="fas fa-exclamation-triangle me-1"></i>Error Logs
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link position-relative" href="/admin/settings">
              <i class="fas fa-cog me-1"></i>Settings
              <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;"></span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= locals.path && path.startsWith('/admin/security') ? 'active' : '' %>" href="/admin/security">
              <i class="fas fa-shield-alt me-2"></i>Security
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <script>
  // Function to update notification count
  async function updateNotificationCount() {
    try {
      const response = await fetch('/admin/notifications/unread-count');
      const data = await response.json();
      
      const countElement = document.getElementById('notificationCount');
      if (data.count > 0) {
        countElement.textContent = data.count > 99 ? '99+' : data.count;
        countElement.style.display = 'inline-block';
      } else {
        countElement.style.display = 'none';
      }
    } catch (error) {
      console.error('Error fetching notification count:', error);
    }
  }

  // Update count on page load
  updateNotificationCount();

  // Update count every 30 seconds
  setInterval(updateNotificationCount, 30000);
  </script>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-QwwpmFZ3CmzcULl90LO6FzFzDWEb5xA7c+6p6EwBgpWg9RCZITT0ho1izR4bFWxZ" crossorigin="anonymous"></script>
</body>
</html>
