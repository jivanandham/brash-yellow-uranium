<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Dashboard - Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin-dashboard.css">
    <link rel="stylesheet" href="/css/security-dashboard.css">
</head>
<body class="security-page">
    <%- include('../partials/navbar') %>
    <%- include('../partials/admin-navbar') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="page-header">
                    <h1>
                        <i class="fas fa-shield-alt"></i>
                        Security Dashboard
                    </h1>
                    <p>Monitor system security and audit logs</p>
                </div>
            </div>
        </div>

        <!-- Security Stats -->
        <div class="row g-3">
            <div class="col-md-3">
                <div class="stat-card">
                    <i class="fas fa-user-shield"></i>
                    <h3>Active Users</h3>
                    <h2><%= stats.activeUsers %></h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h3>Security Alerts</h3>
                    <h2><%= stats.securityAlerts %></h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <i class="fas fa-shield-virus"></i>
                    <h3>Failed Logins</h3>
                    <h2><%= stats.failedLogins %></h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <i class="fas fa-lock"></i>
                    <h3>2FA Enabled</h3>
                    <h2><%= stats.twoFactorEnabled %>%</h2>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="chart-container">
                    <h3>
                        <i class="fas fa-chart-line"></i>
                        Login Attempts Over Time
                    </h3>
                    <canvas id="loginAttemptsChart"></canvas>
                </div>
            </div>
            <div class="col-md-6">
                <div class="chart-container">
                    <h3>
                        <i class="fas fa-chart-pie"></i>
                        Security Incidents by Type
                    </h3>
                    <canvas id="securityIncidentsChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Audit Logs Section -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="filter-section">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Severity Level</label>
                            <select class="form-select" id="severityFilter">
                                <option value="">All Levels</option>
                                <option value="high">High</option>
                                <option value="medium">Medium</option>
                                <option value="low">Low</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Event Type</label>
                            <select class="form-select" id="eventTypeFilter">
                                <option value="">All Events</option>
                                <option value="login">Login Attempts</option>
                                <option value="user">User Management</option>
                                <option value="system">System Changes</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Date Range</label>
                            <input type="text" class="form-control" id="dateRange">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-filter w-100" onclick="applyFilters()">
                                <i class="fas fa-filter"></i>
                                Apply Filters
                            </button>
                        </div>
                    </div>
                </div>

                <div class="audit-log-container">
                    <h3>
                        <i class="fas fa-list"></i>
                        Audit Logs
                    </h3>
                    <div id="auditLogs">
                        <% if (auditLogs.length > 0) { %>
                            <% auditLogs.forEach(function(log) { %>
                                <div class="audit-log">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="mb-1"><%= log.event %></h5>
                                            <p class="mb-1"><%= log.description %></p>
                                            <div class="audit-log-meta">
                                                <span class="me-3">
                                                    <i class="fas fa-user"></i>
                                                    <%= log.user %>
                                                </span>
                                                <span>
                                                    <i class="fas fa-clock"></i>
                                                    <%= moment(log.timestamp).fromNow() %>
                                                </span>
                                            </div>
                                        </div>
                                        <span class="severity-badge severity-<%= log.severity %>">
                                            <%= log.severity %>
                                        </span>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-clipboard-list fa-3x mb-3"></i>
                                <p class="mb-0">No audit logs found</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
    <script>
        // Initialize charts with a modern color scheme
        const chartColors = ['#4a90e2', '#357abd', '#2c3e50', '#6c757d'];
        const chartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        padding: 20,
                        font: {
                            size: 12
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        };

        // Login Attempts Chart
        const loginCtx = document.getElementById('loginAttemptsChart').getContext('2d');
        new Chart(loginCtx, {
            type: 'line',
            data: {
                labels: <%- JSON.stringify(loginAttempts.labels) %>,
                datasets: [{
                    label: 'Successful Logins',
                    data: <%- JSON.stringify(loginAttempts.successful) %>,
                    borderColor: chartColors[0],
                    backgroundColor: 'rgba(74, 144, 226, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Failed Logins',
                    data: <%- JSON.stringify(loginAttempts.failed) %>,
                    borderColor: chartColors[2],
                    backgroundColor: 'rgba(44, 62, 80, 0.1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: chartOptions
        });

        // Security Incidents Chart
        const incidentsCtx = document.getElementById('securityIncidentsChart').getContext('2d');
        new Chart(incidentsCtx, {
            type: 'doughnut',
            data: {
                labels: <%- JSON.stringify(securityIncidents.labels) %>,
                datasets: [{
                    data: <%- JSON.stringify(securityIncidents.data) %>,
                    backgroundColor: chartColors,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: {
                                size: 12
                            }
                        }
                    }
                }
            }
        });

        function applyFilters() {
            const severity = document.getElementById('severityFilter').value;
            const eventType = document.getElementById('eventTypeFilter').value;
            const dateRange = document.getElementById('dateRange').value;
            
            // Construct URL with filter parameters
            const url = new URL(window.location.href);
            if (severity) url.searchParams.set('severity', severity);
            if (eventType) url.searchParams.set('eventType', eventType);
            if (dateRange) url.searchParams.set('dateRange', dateRange);
            
            window.location.href = url.toString();
        }
    </script>
</body>
</html>
