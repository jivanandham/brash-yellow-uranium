<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error Logs | Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/header-footer.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/admin-dashboard.css">
  <style>
    .error-logs-page {
      background-color: #f8f9fa;
      min-height: 100vh;
      padding: 2rem 0;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1rem;
    }

    .stat-icon.red {
      background: rgba(235, 87, 87, 0.1);
      color: #eb5757;
    }

    .stat-icon.orange {
      background: rgba(242, 153, 74, 0.1);
      color: #f2994a;
    }

    .stat-icon.yellow {
      background: rgba(242, 201, 76, 0.1);
      color: #f2c94c;
    }

    .stat-icon.blue {
      background: rgba(47, 128, 237, 0.1);
      color: #2f80ed;
    }

    .stat-value {
      font-size: 1.75rem;
      font-weight: 600;
      color: #2c3e50;
      margin-bottom: 0.5rem;
    }

    .stat-label {
      color: #6c757d;
      font-size: 0.875rem;
    }

    .search-box {
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .search-input-group {
      position: relative;
    }

    .search-input-group input {
      padding: 0.75rem 1rem 0.75rem 3rem;
      border: 2px solid #e9ecef;
      border-radius: 8px;
      width: 100%;
      transition: all 0.2s ease;
    }

    .search-input-group input:focus {
      border-color: #4a90e2;
      box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
    }

    .search-input-group i {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #6c757d;
      pointer-events: none;
    }

    .logs-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .logs-header {
      padding: 1.5rem;
      border-bottom: 1px solid #e9ecef;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .logs-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: #2c3e50;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .logs-actions {
      display: flex;
      gap: 1rem;
    }

    .table {
      margin-bottom: 0;
    }

    .table thead th {
      background: #4a90e2;
      color: white;
      font-weight: 500;
      padding: 1rem;
      border: none;
    }

    .table tbody td {
      padding: 1rem;
      vertical-align: middle;
      border-bottom: 1px solid #e9ecef;
    }

    .table tbody tr:hover {
      background-color: #f8f9fa;
    }

    .severity-badge {
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .severity-badge.error {
      background: rgba(235, 87, 87, 0.1);
      color: #eb5757;
    }

    .severity-badge.warning {
      background: rgba(242, 153, 74, 0.1);
      color: #f2994a;
    }

    .severity-badge.info {
      background: rgba(47, 128, 237, 0.1);
      color: #2f80ed;
    }

    .timestamp {
      font-size: 0.875rem;
      color: #6c757d;
    }

    .user-info {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .user-avatar {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: #e9ecef;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #6c757d;
    }

    .user-details {
      line-height: 1.3;
    }

    .user-name {
      font-weight: 500;
      color: #2c3e50;
    }

    .user-email {
      font-size: 0.875rem;
      color: #6c757d;
    }

    .error-message {
      max-width: 300px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .btn-action {
      padding: 0.5rem;
      border-radius: 8px;
      border: none;
      background: #f8f9fa;
      color: #6c757d;
      transition: all 0.2s ease;
    }

    .btn-action:hover {
      background: #4a90e2;
      color: white;
    }

    .empty-state {
      padding: 4rem 2rem;
      text-align: center;
    }

    .empty-state-icon {
      font-size: 4rem;
      color: #6c757d;
      margin-bottom: 1.5rem;
    }

    /* Pagination Styles */
    .pagination {
      margin: 0;
      gap: 0.25rem;
    }

    .page-link {
      color: #2c3e50;
      border: 1px solid #e9ecef;
      padding: 0.5rem 1rem;
      border-radius: 0.375rem;
      transition: all 0.2s ease-in-out;
    }

    .page-link:hover {
      background-color: #e9ecef;
      border-color: #dee2e6;
      color: #1a252f;
    }

    .page-item.active .page-link {
      background-color: #2c3e50;
      border-color: #2c3e50;
      color: white;
    }

    .page-item.disabled .page-link {
      color: #6c757d;
      pointer-events: none;
      background-color: #f8f9fa;
      border-color: #e9ecef;
    }

    /* Empty State Styles */
    .empty-state {
      padding: 2rem;
      text-align: center;
    }

    .empty-state i {
      font-size: 2.5rem;
      color: #6c757d;
      margin-bottom: 1rem;
    }

    .empty-state p {
      color: #6c757d;
      margin: 0;
    }

    @media (max-width: 768px) {
      .error-logs-page {
        padding: 1rem 0;
      }

      .stats-grid {
        grid-template-columns: 1fr;
      }

      .logs-header {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }

      .logs-actions {
        width: 100%;
      }

      .btn-action {
        flex: 1;
        justify-content: center;
      }

      .error-message {
        max-width: 200px;
      }
    }
  </style>
</head>
<body class="error-logs-page">
  <%- include('../partials/navbar') %>
  <%- include('../partials/admin-navbar') %>

  <div class="container">
    <div class="page-header mb-4">
      <h1 class="d-flex align-items-center gap-2">
        <i class="fas fa-exclamation-triangle text-danger"></i>
        Error Logs
      </h1>
      <p class="text-muted">Monitor and analyze system errors and warnings</p>
    </div>

    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon red">
          <i class="fas fa-exclamation-circle fa-lg"></i>
        </div>
        <div class="stat-value">156</div>
        <div class="stat-label">Total Errors</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon orange">
          <i class="fas fa-exclamation-triangle fa-lg"></i>
        </div>
        <div class="stat-value">89</div>
        <div class="stat-label">Active Issues</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon yellow">
          <i class="fas fa-clock fa-lg"></i>
        </div>
        <div class="stat-value">15m</div>
        <div class="stat-label">Avg. Resolution Time</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon blue">
          <i class="fas fa-check-circle fa-lg"></i>
        </div>
        <div class="stat-value">92%</div>
        <div class="stat-label">Resolution Rate</div>
      </div>
    </div>

    <div class="search-box">
      <div class="search-input-group">
        <i class="fas fa-search"></i>
        <input type="text" id="searchInput" class="form-control" placeholder="Search error logs by message, user, or location...">
      </div>
    </div>

    <div class="logs-container">
      <div class="logs-header">
        <h2 class="logs-title">
          <i class="fas fa-list text-primary"></i>
          Recent Error Logs
        </h2>
        <div class="logs-actions">
          <button class="btn btn-primary" onclick="exportLogs()">
            <i class="fas fa-download"></i>
            Export Logs
          </button>
          <button class="btn btn-danger" onclick="clearLogs()">
            <i class="fas fa-trash-alt"></i>
            Clear Logs
          </button>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Timestamp</th>
              <th>User</th>
              <th>Severity</th>
              <th>Error</th>
              <th>URL</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (errorLogs && errorLogs.length > 0) { %>
              <% errorLogs.forEach(log => { %>
                <tr>
                  <td>
                    <div class="timestamp">
                      <div><%= new Date(log.timestamp).toLocaleDateString() %></div>
                      <div><%= new Date(log.timestamp).toLocaleTimeString() %></div>
                    </div>
                  </td>
                  <td>
                    <div class="user-info">
                      <div class="user-avatar">
                        <i class="fas fa-user"></i>
                      </div>
                      <div class="user-details">
                        <div class="user-name"><%= log.userName %></div>
                        <div class="user-email"><%= log.userEmail %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="severity-badge error">
                      <i class="fas fa-exclamation-circle"></i>
                      Error
                    </span>
                  </td>
                  <td>
                    <div class="error-message" title="<%= log.error %>">
                      <%= log.error %>
                    </div>
                  </td>
                  <td>
                    <div class="error-message" title="<%= log.url %>">
                      <%= log.url %>
                    </div>
                  </td>
                  <td>
                    <div class="d-flex gap-2">
                      <button class="btn-action" onclick="viewDetails('<%= log.id %>')" title="View Details">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button class="btn-action" onclick="markResolved('<%= log.id %>')" title="Mark as Resolved">
                        <i class="fas fa-check"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4">
                  <div class="empty-state">
                    <i class="fas fa-clipboard-list text-muted mb-3"></i>
                    <p class="mb-0">No error logs found</p>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <!-- Pagination -->
        <% if (pagination && pagination.totalPages > 1) { %>
          <nav aria-label="Error logs pagination" class="mt-4">
            <ul class="pagination justify-content-center">
              <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>" <%= !pagination.hasPrevPage ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                  <i class="fas fa-chevron-left"></i> Previous
                </a>
              </li>

              <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
              <% } %>

              <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>" <%= !pagination.hasNextPage ? 'tabindex="-1" aria-disabled="true"' : '' %>>
                  Next <i class="fas fa-chevron-right"></i>
                </a>
              </li>
            </ul>
          </nav>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const rows = document.querySelectorAll('tbody tr');
      
      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      });
    });

    function viewDetails(logId) {
      // Implement view details functionality
      console.log('View details for log:', logId);
    }

    function markResolved(logId) {
      // Implement mark as resolved functionality
      console.log('Mark as resolved:', logId);
    }

    function exportLogs() {
      // Implement export logs functionality
      console.log('Exporting logs...');
    }

    function clearLogs() {
      if (confirm('Are you sure you want to clear all logs? This action cannot be undone.')) {
        // Implement clear logs functionality
        console.log('Clearing logs...');
      }
    }
  </script>
</body>
</html>